{
  "name": "mat",
  "author": "man",
  "version": "1.0.0",
  "description": "Basic web app",
  "scripts": {
    "serve": "lserver",
    "js": "babel src/js/ -d dist/ --presets=es2015,minify",
    "css": "node-sass src/scss/main.scss -o dist/ --output-style compressed",
    "post": "postcss dist/main.css -d dist/ --use autoprefixer",
    "build": "npm run css && npm run post && npm run js",
    "b": "npm run build",
    "watch": "watch 'npm run build'"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.5.1",
    "local-server": "^0.1.8",
    "node-sass": "^4.13.1",
    "postcss-cli": "^7.1.0",
    "watch": "^1.0.2"
  }
}
