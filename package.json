{
  "name": "mat",
  "author": "man",
  "version": "1.0.0",
  "description": "Basic web app",
  "devDependencies": {
    "autoprefixer": "^9.7.x",
    "babel-cli": "^6.26.x",
    "babel-preset-es2015": "^6.24.x",
    "local-server": "^0.1.x",
    "node-sass": "^4.13.x",
    "postcss-cli": "^7.1.x",
    "watch": "^1.0.x"
  },
  "scripts": {
    "serve": "lserver",
    "js": "babel src/js -d dist/ --presets babel-preset-es2015",
    "scss": "node-sass src/scss/main.scss -o dist/ --output-style compressed",
    "postcss": "postcss dist/main.css -d dist/ --use autoprefixer",
    "build": "npm run js; npm run scss && npm run postcss",
    "b": "npm run build",
    "watch": "watch 'npm run build'"
  }
}
